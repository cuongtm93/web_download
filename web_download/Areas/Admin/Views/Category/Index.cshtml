@using webdownload.Areas.Admin.Models
@model List<CategoryIndexViewmodel>
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <div class="card-header page-breadcrumb">
                Quản lý chuyên mục
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Icon</th>
                            <th scope="col">Tên</th>
                            <th scope="col">Url</th>
                            <th scope="col">Order</th>
                            <th scope="col">Chuyên mục cha</th>
                            <th scope="col">Cập nhật</th>
                        </tr>
                    </thead>
                    <tbody id="checkboxes">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    <img src="@Url.Content(@item.Icon)" style="width : 50px; height : 50px" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Url
                                </td>
                                <td>
                                    @item.Order
                                </td>
                                <td>
                                    @if (item.ParentCategory != null)
                                    {
                                        @item.ParentCategory.name
                                    }
                                    else
                                    {
                                        <span>-----</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","Category",new { ID = item.Id })">
                                        <div type="button" class="btn btn-success" id="update">Cập nhật</div>
                                    </a>
                                    <a href="@Url.Action("Delete","Category",new { ID = item.Id })">
                                        <div type="button" class="btn btn-danger" id="delete">
                                            <i class="fa fa-trash"></i>
                                        Xoá
                                        </div>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12"></div>
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 ">
        <a href="@Url.Action("Add","Category")">
            <div class="btn btn-outline-success float-right mr-1" style="width : 110px;">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Thêm mới
            </div>
        </a>
       
    </div>
</div>

