@using webdownload.Areas.Admin.Models
@model subcategorylist_viewmodel
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <div class="card-header page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">@Model.Category.Parent.name</a></li>
                        <li class="breadcrumb-item">
                            <a href="#" class="breadcrumb-link">
                                @Model.Category.name
                            </a>
                        </li>
                    </ol>
                </nav>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">
                                <input type="checkbox" id="checkall" onclick="$('input:checkbox').prop('checked', $('#checkall').is(':checked'))" />
                            </th>
                            <th scope="col">Icon</th>
                            <th scope="col">Tên</th>
                            <th scope="col">Bản quyền</th>
                            <th scope="col">Dung lượng</th>
                        </tr>
                    </thead>
                    <tbody id="checkboxes">
                        @foreach (var software in Model.softwares)
                        {
                            <tr>
                                <th scope="row">
                                    <input type="checkbox" class="messageCheckbox" name="sport" value="@software.ID" />
                                </th>
                                <td>
                                    <img src="@Url.Content(software.icon)" style="width : 50px; height : 50px;" />
                                </td>
                                <td>@software.Name</td>
                                @if (software.lience == 0)
                                {
                                    <td>Miễn phí</td>
                                }
                                else
                                {
                                    <td>Bản quyền</td>
                                }
                                <td>@(software.size / 1024) MB </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12"></div>
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 ">
        <div class="btn btn-danger   float-right" onclick="delete_selected()">
            <i class="fa fa-trash" aria-hidden="true"></i>
            Xoá
        </div>
        <div class="btn btn-primary float-right mr-1">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Thêm mới
        </div>

    </div>
</div>


@section script{
    <script>
        function delete_selected(evt) {
            var items = [];
            $.each($("input[name='sport']:checked"), function () {
                items.push($(this).val());
            });
            console.log(items);
            if (items.length == 0) {
                alert("Bạn hãy tick vào các ô để chọn mục cần xoá!");
                return;
            }
            vex.dialog.confirm({
                message: `Bạn thật sự muốn xoá ${items.length} mục đã chọn không?`,
                callback: function (value) {
                    if (value) {

                        $.ajax({
                            url: '@Url.Action("delete_softwares","default")',
                            type: 'POST',
                            dataType: 'json',
                            data: {
                                checkeds: items
                            }
                        }).done(function (ketqua) {
                            if (ketqua.message === 'ok')
                                location.reload();
                        });
                        console.log('Successfully destroyed the planet.')
                    } else {
                        console.log('Chicken.')
                    }
                }
            })



        }
    </script>
}