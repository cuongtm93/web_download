

@model TblSoftware
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    img {
        max-width: 100%;
        height: auto;
    }
</style>
<div class="mt-3">
    @Html.Raw(Model.text)
</div>

@if (!string.IsNullOrWhiteSpace(Model.main_download))
{
    <div class="row">
        @foreach (var item in Model.main_download.Split("\n"))
        {
            <div class="col-12 col-md-9">
                <span>@item</span>
            </div>
            <a href="@item" target="_blank" >
                <div class="col-12 col-md-3">
                    <div type="button" class="btn btn-success">Tải xuống</div>
                </div>
            </a>
        }
    </div>
}
else
{
    <p class="alert alert-warning">Chưa có link download</p>
}


