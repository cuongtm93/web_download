

@model TblSoftware
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    img {
        max-width: 100%;
        height: auto;
    }
</style>

<p class="mt-3">
    <b>Giới thiệu</b>
</p>
<hr />

<div class="mt-3">
    @Html.Raw(Model.text)
</div>

<p class="mt-3">
    <b>Link tải xuống</b>
</p>
 
<hr />
@if (!string.IsNullOrWhiteSpace(Model.main_download))
{
    var item = Model.main_download.Split("\n");

    for (int i = 0; i < item.Length; i++)
    {
        if (!string.IsNullOrWhiteSpace(item[i]))
        {
            <div class="row mt-3">
                <div class="col-12 col-md-9">
                    <span>@item[i]</span>
                </div>
                <a href="@item[i]" target="_blank">
                    <div class="col-12 col-md-3">
                        <button type="button" class="btn btn-success">
                            <i class="fa fa-download"></i> @(i+1) -  Tải xuống
                        </button>
                    </div>
                </a>
            </div>
        }
    }

}
else
{
    <p class="alert alert-warning">Chưa có link download</p>
}


