

@model TblSoftware
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    img {
        max-width: 100%;
        height: auto;
    }
</style>

<p class="mt-3">
    <b>Giới thiệu</b>
</p>
<hr />

<div class="mt-3">
    @Html.Raw(Model.text)
</div>

<p class="mt-3">
    <b>Link tải xuống</b>
</p>
 
<hr />

<a href="@Url.Action("download","home", new { url = Model.short_url })">
    <button type="button" class="btn btn-success">
        <i class="fa fa-download"></i> Tải xuống
    </button>
</a>
